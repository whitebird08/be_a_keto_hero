extends layout

block content

  h1 Showing Meal

  table(border='1')
    thead
      tr
        th Quantity
        th Name
        th Pro
        th Fat
        th Cho
      tr
        td= allMeals.quantity 
        td= allMeals.meal_name
        td= allMeals.meal_item1
        td= allMeals.meal_item2
        td= allMeals.meal_item3
        td= allMeals.meal_item4
        td= allMeals.meal_item5

  tr
    a(href='/meal/' + allMeals._id + '/editmeal') Edit
  tr
    a(href='/meal/') Back to Meal List
  tr
    form(action='/meal/' + allMeals._id + "/delete", method='post', name='delete')
      button(type='submit') Delete