extends layout

block content

  h1 list of foods
 
  table(border='1')
    thead
      tr
        th Show
        th Name
        th Pro
        th Fat
        th Cho
        th Edit 
        th Add To Meal

    for food in allFoods
      tr
        th 
            a(href='/food/' + food._id) Show
        td
            a(href='/food/' + food._id)= food.food_name
        td
            a(href='/food/' + food._id)= food.protien_grams
        td
            a(href='/food/' + food._id)= food.fat_grams
        td
            a(href='/food/' + food._id)= food.carbs_grams
        td
            a(href='/food/' + food._id + '/editfood') Edit

        td
            a(href='/meal/:id/editmeal') Add To Meal
  tr
    a(href="/food/newfood") Add New Food
 

    p
        a(href="/food/newfood") newfood
    p
        a(href="/food") foods
    p
        a(href="/meal/newmeal") newmeal
    p
        a(href="/meal") meals
     
