extends layout

block content

  h1 build a new meal

  form(action="/meal/", method="post")
    div
      label  Meal Name
        input(type="text" name="name" )
    div
      label Food1
        select(name='meal_item1')
          for food in allFoods
            option(value=food._id)= food.food_name
    div
      label Food2
        select(name='meal_item2')
          for food in allFoods
            option(value=food._id)= food.food_name
    div
      input(type="submit" value='save new meal')

  

    
