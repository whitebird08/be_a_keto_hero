extends layout

block content



  h1 build a new meal

  
  
form(action="/meal/", method="post")


    div
    .header 
      input(type="text" name="meal_name" placeholder='meal name')
    .food_container
      .percent_wrapper
        input.adjust_qty_lower(type='submit', name='subtract', value='-')
        .proP_wrapper
          .quantityPercentPro
            a(meal) #{meal.foods.protien_grams}%
          .proP pro
        .fatP_wrapper
          .quantityPercentFat 
            a(meal) #{meal.foods.fat_grams}%
          .fatP fat
        .carbP_wrapper
          .quantityPercentCho 
            a(meal) #{meal.foods.carbs_grams}%
          .carbP carb
      .amount_and_name_food_wrapper
        .amount_food 
          a(meal) #{meal.foods.total_grams}g
        .name_food 
          select(name='meal_item1')
            for food in allFoods
